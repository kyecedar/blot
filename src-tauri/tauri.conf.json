{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "scribble",
  "version": "0.1.0",
  "identifier": "dog.kye.scribble",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "scribble",
        "width": 800,
        "height": 600,
        "minWidth": 350,
        "minHeight": 350,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
